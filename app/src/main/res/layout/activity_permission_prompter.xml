<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fjc.lengket.akuarium.PermissionPrompter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="500sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo!"
            android:textSize="12pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kami akan membutuhkan akses menuju Kamera dan Tempat Penyimpanan anda. Kamera anda kami gunakan hanya untuk melakukan tracking gambar dan data tidak akan meninggalkan perangkat anda. Sementara itu, Tempat Penyimpanan akan kami gunakan untuk menyimpan cache.\n\nUntuk memulai, mohon tekan Izinkan."
            android:textAlignment="viewStart"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Izinkan"
            android:id="@+id/btnIzinkan"/>
    </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
